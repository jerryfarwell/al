
<div class = "editprofile" style="text-align: center">

<h2>Modifier votre profil</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<div class="first_name">
    <%= f.label :Prénom %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div><br>

   <div class="last_name">
    <%= f.label :Nom %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div><br>

   <div class="username">
    <%= f.label :Pseudo %><br />
    <%= f.text_field :username, autofocus: true %>
  </div><br>

   <div class="birthdate">
    <%= f.label :Naissance %><br />
    <%= f.date_field :birthdate, autofocus: true %>
  </div><br>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(ne pas remplir si vous souhaitez garder le mot de passe actuel)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> charactères minimum</em>
    <% end %>
  </div><br>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(nous avons besoin de votre mot de passe actuel pour confirmer le changement)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Enregistrer" %>
  </div><br>
<% end %>

<h4><mark>Supprimer votre compte </mark></h4>
<h4>👇🏽</h4>

<p>Pas satisfait? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<br>
<%= link_to "Retour", :back %><br><br><br>

</div>